<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.hfa_rapidsurvey.ui.sections.SectionD3Activity" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- CUSTOM TOOLBAR -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/CustomToolbarTheme"
            app:popupTheme="@style/CustomPopupTheme"
            app:subtitle="@string/d03"
            app:subtitleTextAppearance="@style/Toolbar.SubtitleText"
            app:title="@string/moddtitle"
            app:titleTextAppearance="@style/Toolbar.TitleText" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/GrpName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!-- d0301  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVd0301"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom">

                            <TextView
                                android:id="@+id/qtxt_d0301"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/q_d0301"
                                android:text="@string/d0301" />

                            <TextView
                                android:id="@+id/q_d0301"
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/qtxt_d0301"
                                android:layout_alignBottom="@id/qtxt_d0301"
                                android:text="@string/Q_d0301" />

                        </RelativeLayout>

                        <RadioGroup
                            android:id="@+id/d0301"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/d0301a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/d0301a" />

                            <RadioButton
                                android:id="@+id/d0301b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/d0301b" />

                            <RadioButton
                                android:id="@+id/d0301c"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/d0301c" />

                            <RadioButton
                                android:id="@+id/d0301d"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/d0301d" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- d0302  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVd0302"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom">

                            <TextView
                                android:id="@+id/qtxt_d0302"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/q_d0302"
                                android:text="@string/d0302" />

                            <TextView
                                android:id="@+id/q_d0302"
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/qtxt_d0302"
                                android:layout_alignBottom="@id/qtxt_d0302"
                                android:text="@string/Q_d0302" />

                        </RelativeLayout>

                        <RadioGroup
                            android:id="@+id/d0302"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/d0302a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/d0302a" />

                            <RadioButton
                                android:id="@+id/d0302b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/d0302b" />

                            <RadioButton
                                android:id="@+id/d0302c"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/d0302c" />

                            <RadioButton
                                android:id="@+id/d0302d"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/d0302d" />

                            <RadioButton
                                android:id="@+id/d0302e"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/d0302e" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- d0303  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVd0303"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom">

                            <TextView
                                android:id="@+id/qtxt_d0303"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/q_d0303"
                                android:text="@string/d0303" />

                            <TextView
                                android:id="@+id/q_d0303"
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/qtxt_d0303"
                                android:layout_alignBottom="@id/qtxt_d0303"
                                android:text="@string/Q_d0303" />

                        </RelativeLayout>

                        <RadioGroup
                            android:id="@+id/d0303"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/d0303a"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/d0303a" />

                            <RadioButton
                                android:id="@+id/d0303b"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/d0303b" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- d0304  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVd0304"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom">

                            <TextView
                                android:id="@+id/qtxt_d0304"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/q_d0304"
                                android:text="@string/d0304" />

                            <TextView
                                android:id="@+id/q_d0304"
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/qtxt_d0304"
                                android:layout_alignBottom="@id/qtxt_d0304"
                                android:text="@string/Q_d0304" />

                        </RelativeLayout>

                        <RadioGroup
                            android:id="@+id/d0304"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/d0304a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/d0304a" />

                            <RadioButton
                                android:id="@+id/d0304b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/d0304b" />

                            <RadioButton
                                android:id="@+id/d0304c"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/d0304c" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!--EndButton LinearLayout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:padding="24dp">

                    <Button
                        android:id="@+id/btn_End"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:onClick="btnEnd"
                        android:text="Cancel"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_Continue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/capsule"
                        android:backgroundTint="@color/colorAccent"
                        android:backgroundTintMode="src_atop"
                        android:onClick="btnContinue"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <!--EndButton LinearLayout-->


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>