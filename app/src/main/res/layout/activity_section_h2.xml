<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.hfa_rapidsurvey.ui.sections.SectionH2Activity" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- CUSTOM TOOLBAR -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/CustomToolbarTheme"
            app:popupTheme="@style/CustomPopupTheme"
            app:subtitle="@string/h02"
            app:subtitleTextAppearance="@style/Toolbar.SubtitleText"
            app:title="@string/modhtitle"
            app:titleTextAppearance="@style/Toolbar.TitleText" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/GrpName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!-- h0201  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVh0201"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom">

                            <TextView
                                android:id="@+id/qtxt_h0201"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/q_h0201"
                                android:text="@string/h0201" />

                            <TextView
                                android:id="@+id/q_h0201"
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/qtxt_h0201"
                                android:layout_alignBottom="@id/qtxt_h0201"
                                android:text="@string/Q_h0201" />

                        </RelativeLayout>

                        <RadioGroup
                            android:id="@+id/h0201"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/h0201a"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/h0201a" />

                            <RadioButton
                                android:id="@+id/h0201b"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/h0201b" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- h0202  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVh0202"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom">

                            <TextView
                                android:id="@+id/qtxt_h0202"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/q_h0202"
                                android:text="@string/h0202" />

                            <TextView
                                android:id="@+id/q_h0202"
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/qtxt_h0202"
                                android:layout_alignBottom="@id/qtxt_h0202"
                                android:text="@string/Q_h0202" />

                        </RelativeLayout>

                        <RadioGroup
                            android:id="@+id/h0202"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/h0202a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/h0202a" />

                            <RadioButton
                                android:id="@+id/h0202b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/h0202b" />

                            <RadioButton
                                android:id="@+id/h0202c"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/h0202c" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- h0203  SUB TextView   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVh0203"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/sub"
                            android:text="@string/h0203" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- h0203a  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVh0203a"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom">

                            <TextView
                                android:id="@+id/qtxt_h0203a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/q_h0203a"
                                android:text="@string/h0203a" />

                            <TextView
                                android:id="@+id/q_h0203a"
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/qtxt_h0203a"
                                android:layout_alignBottom="@id/qtxt_h0203a"
                                android:text="@string/Q_h0203a" />

                        </RelativeLayout>

                        <RadioGroup
                            android:id="@+id/h0203a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/h0203aa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/h0203aa" />

                            <RadioButton
                                android:id="@+id/h0203ab"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/h0203ab" />

                            <RadioButton
                                android:id="@+id/h0203ac"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/h0203ac" />

                            <RadioButton
                                android:id="@+id/h0203ad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/h0203ad" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- h0203b  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVh0203b"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom">

                            <TextView
                                android:id="@+id/qtxt_h0203b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/q_h0203b"
                                android:text="@string/h0203b" />

                            <TextView
                                android:id="@+id/q_h0203b"
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/qtxt_h0203b"
                                android:layout_alignBottom="@id/qtxt_h0203b"
                                android:text="@string/Q_h0203b" />

                        </RelativeLayout>

                        <RadioGroup
                            android:id="@+id/h0203b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/h0203ba"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/h0203ba" />

                            <RadioButton
                                android:id="@+id/h0203bb"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/h0203bb" />

                            <RadioButton
                                android:id="@+id/h0203bc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/h0203bc" />

                            <RadioButton
                                android:id="@+id/h0203bd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/h0203bd" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!--EndButton LinearLayout-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:padding="24dp">

                    <Button
                        android:id="@+id/btn_End"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:onClick="btnEnd"
                        android:text="Cancel"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/btn_Continue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/capsule"
                        android:backgroundTint="@color/colorAccent"
                        android:backgroundTintMode="src_atop"
                        android:onClick="btnContinue"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <!--EndButton LinearLayout-->


            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</layout>